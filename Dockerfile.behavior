# BEHAVIOR-1K / OmniGibson Docker Image
# Based on official StanfordVL OmniGibson image from Docker Hub
# https://hub.docker.com/r/stanfordvl/omnigibson

FROM stanfordvl/omnigibson:latest

LABEL maintainer="yubo"
LABEL description="BEHAVIOR-1K / OmniGibson environment with SSH support"

# ============================================
# Environment Variables
# ============================================
ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1
ENV ACCEPT_EULA=Y
# OmniGibson EULA acceptance
ENV OMNIGIBSON_ACCEPT_EULA=yes
# Store assets in persistent workspace volume
ENV OMNIGIBSON_ASSET_PATH=/workspace/omnigibson_assets
ENV GIBSON_ASSETS_PATH=/workspace/omnigibson_assets

# ============================================
# System Packages
# ============================================
RUN apt-get update && apt-get install -y --no-install-recommends \
    openssh-server \
    git \
    git-lfs \
    wget \
    curl \
    vim \
    htop \
    tmux \
    unzip \
    zip \
    net-tools \
    iputils-ping \
    sudo \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# ============================================
# GitHub CLI
# ============================================
RUN curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg | dd of=/usr/share/keyrings/githubcli-archive-keyring.gpg \
    && chmod go+r /usr/share/keyrings/githubcli-archive-keyring.gpg \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | tee /etc/apt/sources.list.d/github-cli.list > /dev/null \
    && apt-get update \
    && apt-get install -y --no-install-recommends gh \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# ============================================
# SSH Configuration
# ============================================
RUN mkdir -p /run/sshd \
    && sed -i "s/#PermitRootLogin.*/PermitRootLogin yes/" /etc/ssh/sshd_config \
    && sed -i "s/#PubkeyAuthentication.*/PubkeyAuthentication yes/" /etc/ssh/sshd_config \
    && sed -i "s/#PasswordAuthentication.*/PasswordAuthentication yes/" /etc/ssh/sshd_config

# ============================================
# Create yubo user with sudo access
# ============================================
RUN useradd -m -s /bin/bash -G sudo yubo \
    && echo "yubo:yubo" | chpasswd \
    && echo "yubo ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers \
    && mkdir -p /home/yubo/.ssh \
    && chmod 700 /home/yubo/.ssh

# ============================================
# Create jason user with sudo access
# ============================================
RUN useradd -m -s /bin/bash -G sudo jason \
    && echo "jason:jason" | chpasswd \
    && echo "jason ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers \
    && mkdir -p /home/jason/.ssh \
    && chmod 700 /home/jason/.ssh

# ============================================
# Git Configuration
# ============================================
RUN git config --system user.name "yubo-ruan" \
    && git config --system user.email "yubo@8dcapital.com" \
    && git config --system init.defaultBranch main

# ============================================
# Shell Configuration (source Isaac Sim environment)
# ============================================
RUN echo '# Isaac Sim / OmniGibson environment' >> /home/yubo/.bashrc \
    && echo 'source /isaac-sim/setup_conda.sh 2>/dev/null || true' >> /home/yubo/.bashrc \
    && echo 'export OMNIGIBSON_ASSET_PATH=/workspace/omnigibson_assets' >> /home/yubo/.bashrc \
    && echo 'cd /workspace' >> /home/yubo/.bashrc \
    && chown yubo:yubo /home/yubo/.bashrc \
    # jason user
    && echo '# Isaac Sim / OmniGibson environment' >> /home/jason/.bashrc \
    && echo 'source /isaac-sim/setup_conda.sh 2>/dev/null || true' >> /home/jason/.bashrc \
    && echo 'export OMNIGIBSON_ASSET_PATH=/workspace/omnigibson_assets' >> /home/jason/.bashrc \
    && echo 'cd /workspace' >> /home/jason/.bashrc \
    && chown jason:jason /home/jason/.bashrc \
    # root user
    && echo '# Isaac Sim / OmniGibson environment' >> /root/.bashrc \
    && echo 'source /isaac-sim/setup_conda.sh 2>/dev/null || true' >> /root/.bashrc \
    && echo 'export OMNIGIBSON_ASSET_PATH=/workspace/omnigibson_assets' >> /root/.bashrc

# ============================================
# Additional Python Dependencies (use Isaac Sim's pip)
# ============================================
# Install OmniGibson (if not already in base image) and other dependencies
RUN /isaac-sim/python.sh -m pip install --no-cache-dir \
    omnigibson \
    huggingface_hub \
    wandb \
    tqdm \
    rich \
    PyYAML

# ============================================
# Workspace Setup (symlink ~/.claude to /workspace/.claude for persistence)
# ============================================
RUN mkdir -p /workspace \
    && mkdir -p /workspace/omnigibson_assets \
    && mkdir -p /workspace/.claude \
    && chown -R yubo:yubo /workspace \
    # Symlink ~/.claude -> /workspace/.claude for yubo
    && ln -sf /workspace/.claude /home/yubo/.claude \
    && chown -h yubo:yubo /home/yubo/.claude \
    # Symlink ~/.claude -> /workspace/.claude for jason
    && ln -sf /workspace/.claude /home/jason/.claude \
    && chown -h jason:jason /home/jason/.claude \
    # Symlink ~/.claude -> /workspace/.claude for root
    && ln -sf /workspace/.claude /root/.claude

WORKDIR /workspace

# Copy scripts
COPY start.sh /start.sh
COPY setup_omnigibson.sh /workspace/setup_omnigibson.sh
RUN chmod +x /start.sh /workspace/setup_omnigibson.sh

# Expose SSH port
EXPOSE 22

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD pgrep sshd > /dev/null || exit 1

ENTRYPOINT ["/start.sh"]
